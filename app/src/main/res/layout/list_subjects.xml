<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:text="15SE204J"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/TextViewDayTimeTableModuleSubjectCode"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextViewSubjectDialogSubjectName"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Introduction to Modern Programming and system architecture with it "
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/textView3"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/TextViewDayTimeTableModuleSubjectCode"
                app:layout_constraintHorizontal_bias="1.0" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/credits"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/TextViewSubjectListCredit"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/textView3"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/textView3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/TextViewSubjectDialogFacultyName"
                android:layout_height="wrap_content"
                android:text="Mr. John Blesswin"
                app:layout_constraintTop_toBottomOf="@+id/TextViewSubjectDialogSubjectName"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:fontFamily="casual"
                android:paddingBottom="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/TextViewSubjectDialogSubjectName" />

            <TextView
                style="@style/Divider"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/TextViewSubjectDialogFacultyName"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="0dp"
                android:text="UB 204"
                android:padding="10dp"
                android:id="@+id/TextViewSubjectDialogClassVenue"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-smallcaps"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0" />





        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
